.join
    background: var(--soft_Blue)
    color: white
    padding: 3em 0
    text-align: center
    @media screen and (min-width: 1024px)
        padding: 4em 0
    .u-wrapper
        max-width 520px
    small
        text-transform: uppercase
        letter-spacing: 5px
        font-size: .65em
    .u-h3
        color: white
        font-size: 1.3em
        margin-top: .5em
        margin-bottom: 1.4em
        letter-spacing: .5px
.form
    .u-button
        margin 0
        &[placeholder]
            color red
    &-input
        margin-bottom: 1.5em
        width: 100%
        padding: 1.05em
        border-radius: 6px
        box-sizing: border-box
        border: none
        font-size: .83em
        outline: 0
        &::-webkit-input-placeholder
            color rgba(145,148,161,.5)
        
    @media screen and (min-width 1024px)
        display: flex
        max-width: 450px
        margin auto
        &-input
            width: 70%
            margin-bottom: 0
            margin-right: 1em
        .u-button
            width: 30% !important