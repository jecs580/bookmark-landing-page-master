.tabs
    // border: 1px solid blue
    margin-top: 2.3em
    border-top: 1px solid var(--grayish_Blue)
    &-link
        // padding: 1em 0
        color: var(--very_Dark_Blue)
        border-bottom: 1px solid var(--grayish_Blue)
    &-content
        display none
        flex-direction: column
        img 
            max-width: 100%
        .u-button
            display: none
        .u-p
            padding: 0 .5em
    label 
        padding: 1em 0
        display: block
        user-select: none
        position relative
        cursor: pointer
        &::after
            display: none
            content: ""
            height 5px
            position: absolute
            width: 50%
            bottom: 0
            left 0
            transform: translateX(50%)
            box-shadow: inset 0 -15px 0 -10px var(--soft_Red)
    input
        display: none
    input[id="bookmarking"]:checked
        & ~ ul [for="bookmarking"]::after
            display: block
        & ~ .tabs-grid #tab-bookmarking
            display: flex
    input[id="searching"]:checked
        & ~ ul [for="searching"]::after
            display: block
        & ~ .tabs-grid #tab-searching
            display: flex
    input[id="sharing"]:checked
        & ~ ul [for="sharing"]::after
            display: block
        & ~ .tabs-grid #tab-sharing
            display: flex
    @media screen and (min-width :1024px)
        border-top none
        text-align: left 
        ul
            display: flex 
            justify-content: center
            // max-width: 800px
            // margin: auto
        label
            padding 1em 2em
            &::after
                width: 100%
                transform: none
        img 
            margin-right: 6.5em
        &-content
            max-width: 86%
            margin: auto
            flex-direction: row
            align-items: center
            .u-button
                display: inline-block
                