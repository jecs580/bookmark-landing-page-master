.tabs
    // border: 1px solid blue
    margin-top: 2.3em
    border-top: 1px solid var(--grayish_Blue)
    &-link
        // padding: 1em 0
        color: var(--very_Dark_Blue)
        border-bottom: 1px solid var(--grayish_Blue)
    &-content
        display none
        img 
            max-width: 100%
        .u-button
            display: none
    label 
        padding: 1em 0
        display: block
        position relative
        &::after
            display: none
            content: ""
            height 5px
            position: absolute
            width: 50%
            bottom: 0
            left 0
            transform: translateX(50%)
            box-shadow: inset 0 -15px 0 -10px var(--soft_Red)
    input
        display: none
    input[id="bookmarking"]:checked
        & ~ ul [for="bookmarking"]::after
            display: block
        & ~ .tabs-grid #tab-bookmarking
            display: block
    input[id="searching"]:checked
        & ~ ul [for="searching"]::after
            display: block
        & ~ .tabs-grid #tab-searching
            display: block
    input[id="sharing"]:checked
        & ~ ul [for="sharing"]::after
            display: block
        & ~ .tabs-grid #tab-sharing
            display: block