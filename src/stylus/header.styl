@import './menu.styl'
.header
    background: white
    position sticky  // parecido a fixed con la diferencia que el contenido que esta fuera de el va debajo y no aculto
    top: 0
    left 0
    right 0
    padding-top: 2.2em
    padding-bottom: 1.2em 
    z-index: 2
    &-content
        display: flex
        justify-content: space-between
        align-items: center
    &-logo
        display: block
        height 25px
        width 100%
        background: url("../images/logo-bookmark.svg") no-repeat