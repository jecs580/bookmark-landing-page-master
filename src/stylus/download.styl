.download
    // border 1px solid red
    padding: 0 1em
    padding-bottom: 6em
    text-align: center
    .u-wrapper >.u-p // Hijo directo de u-wrapper con la clase u-p
        max-width: 540px
        margin: auto
    .u-p
        margin-top: 0 
    &-grid
        margin-top: 2.5em
        // border 1px solid green
        display: grid
        gap: 2em
    &-item
        border-radius: 1em
        padding: 1.5em
        padding-top: 2.5em
        background: url('../images/bg-dots.svg') repeat-x center bottom 100px
        box-shadow: 0 8px 13px -4px rgba(83,104,223,.3)
        .u-p
            margin-bottom: 4em
        .u-h3
            margin-top 1.2em
            margin-bottom: .4em

    @media screen and (min-width :1024px)
        .u-wrapper >.u-h2
            font-size: 1.7em
        &-grid
            grid-template-columns: repeat(3,1fr)
            align-items: center
            gap: 0
            padding-bottom: 7em
        &-item
            max-width: 65%
            position: relative
            &:nth-of-type(1)
                left 5.2em
            &:nth-of-type(2)
                top 2.5em
                left 2.5em
            &:nth-of-type(3)
                top 5em
                left 0