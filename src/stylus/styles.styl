@import './header.styl'
@import './hero.styl'
@import './feactures.styl'
@import './download.styl'
@import './questions.styl'
:root
    // Primary

    --soft_Blue: hsl(231, 69%, 60%);
    --soft_Red: hsl(0, 94%, 66%);

    // Neutral

    --grayish_Blue: hsl(229, 8%, 60%);
    --very_Dark_Blue: hsl(229, 31%, 21%);
    --lightGray:#e5e5e5
body
 font-family: 'Rubik', sans-serif;
 font-size: 18px;
 margin: 0
 padding: 0
 ul
    padding: 0
    list-style none
    margin 0
a
    text-decoration: none
.is-hidden
    display: none
.u-wrapper
    max-width: 1280px
    margin: auto
    padding: 0 1.6em
.u-h1
    font-size: 1.65em
    font-weight: 500
    color: var(--very_Dark_Blue)

.u-h2
    @extends .u-h1
    font-size: 1.3em
.u-h3
    @extends .u-h1
    font-size: 1.2em
    
.u-p
    color: var(--grayish_Blue)
    font-size: 0.83em
    line-height: 1.5

.u-button
    color: white
    background: var(--soft_Blue)
    border: none
    padding: 1em 1.2em
    border-radius: 6px
    font-size: .85em
    margin-left: 0.6em
    font-weight: 500
    box-shadow: 2px 10px 5px -4px rgba(145,148,161,.5);
    cursor: pointer
    &:first-of-type
        margin 0
    &.is-gray
        background: #f7f7f7
        color: var(--very_Dark_Blue)
    &.is-full-width
        width: 100%

